<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CardView.Light.Custom" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="rippleColor">@color/lightGrey</item>
    </style>


    <style name="TextAppearance.text" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/cabin_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="TextAppearance.Text.Header" parent="TextAppearance.text">
        <item name="fontFamily">@font/cabin_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="TextAppearance.Text.Large" parent="TextAppearance.text">
        <item name="fontFamily">@font/cabin_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.Text.Large.Color" parent="TextAppearance.Text.Large">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.Text.Medium" parent="TextAppearance.Text.Large">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.Text.Large.yellow" parent="TextAppearance.Text.Medium">
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="TextAppearance.Numbers.Red" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/bebas_neue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.Numbers.Yellow" parent="TextAppearance.Numbers.Red">
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="TextAppearance.Numbers.Green" parent="TextAppearance.Numbers.Red">
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="TextAppearance.Numbers.Blue" parent="TextAppearance.Numbers.Red">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Widget.MaterialComponents.TextInputLayout.Custom"  parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/edit_color</item>
        <item name="android:textAppearance">@style/TextAppearance.text</item>
        <item name="errorEnabled">true</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusBottomStart">24dp</item>
        <item name="boxCornerRadiusTopEnd">24dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>


    <style name="Button.CustomPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/cabin_medium</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">20dp</item>
        <item name="backgroundTint">@color/bg_selector_primary</item>
        <item name="rippleColor">@color/textColorPrimary</item>
    </style>

    <style name="Button.CustomPrimary.Outlined" parent="Button.CustomPrimary">
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="fontFamily">@font/cabin_medium</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">20dp</item>
        <item name="boxCornerRadiusTopEnd">24dp</item>
        <item name="rippleColor">@color/textColorPrimary</item>
    </style>

